# Environment Variables Template
# Copy this file to .env and fill in your values

# ============ Common ============
NODE_ENV=development
PORT=5000

# ============ Database ============
MONGO_URI_Auth=mongodb://localhost:27017/auth_db
MONGODB_URI_Order=mongodb://localhost:27017/order_db
MONGODB_URI_Restaurant=mongodb://localhost:27017/restaurant_db
MONGODB_URI_Payment=mongodb://localhost:27017/payment_db
MONGODB_URI_Notification=mongodb://localhost:27017/notification_db
MONGODB_URI_Admin=mongodb://localhost:27017/admin_db
MONGODB_URI_Delivery=mongodb://localhost:27017/delivery_db

# ============ JWT ============
JWT_ACCESS_SECRET=your-access-secret-key-here
JWT_REFRESH_SECRET=your-refresh-secret-key-here
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ============ Services URLs ============
AUTH_SERVICE_URL=http://localhost:5001
ORDER_SERVICE_URL=http://localhost:5002
RESTAURANT_SERVICE_URL=http://localhost:5003
PAYMENT_SERVICE_URL=http://localhost:5004
NOTIFICATION_SERVICE_URL=http://localhost:5005
ADMIN_SERVICE_URL=http://localhost:5006
DELIVERY_SERVICE_URL=http://localhost:5007

# ============ Stripe ============
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============ Firebase ============
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id

# ============ Kafka ============
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=fastfood-delivery
KAFKA_GROUP_ID=fastfood-group

# ============ Redis ============
REDIS_URL=redis://localhost:6379

# ============ Email (SMTP) ============
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ============ Twilio (SMS) ============
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ============ Monitoring ============
PROMETHEUS_PUSHGATEWAY=http://localhost:9091
GRAFANA_URL=http://localhost:3001
LOKI_URL=http://localhost:3100

# ============ Logging ============
LOG_LEVEL=info
LOG_FORMAT=json
