{
  "info": {
    "name": "FastFood Delivery API",
    "description": "Complete API collection for FastFood Delivery Platform",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost"
    },
    {
      "key": "auth_port",
      "value": "5001"
    },
    {
      "key": "order_port",
      "value": "5002"
    },
    {
      "key": "restaurant_port",
      "value": "5003"
    },
    {
      "key": "delivery_port",
      "value": "5004"
    },
    {
      "key": "payment_port",
      "value": "5005"
    },
    {
      "key": "notification_port",
      "value": "5006"
    },
    {
      "key": "access_token",
      "value": ""
    },
    {
      "key": "refresh_token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth Service",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"phone\": \"+84901234567\",\n  \"role\": \"customer\"\n}"
            },
            "url": {
              "raw": "{{base_url}}:{{auth_port}}/api/auth/register",
              "host": ["{{base_url}}"],
              "port": "{{auth_port}}",
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.token) {",
                  "    pm.environment.set('access_token', jsonData.token);",
                  "}",
                  "if (jsonData.refreshToken) {",
                  "    pm.environment.set('refresh_token', jsonData.refreshToken);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}:{{auth_port}}/api/auth/login",
              "host": ["{{base_url}}"],
              "port": "{{auth_port}}",
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}:{{auth_port}}/api/auth/me",
              "host": ["{{base_url}}"],
              "port": "{{auth_port}}",
              "path": ["api", "auth", "me"]
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}:{{auth_port}}/api/auth/refresh-token",
              "host": ["{{base_url}}"],
              "port": "{{auth_port}}",
              "path": ["api", "auth", "refresh-token"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}:{{auth_port}}/api/auth/logout",
              "host": ["{{base_url}}"],
              "port": "{{auth_port}}",
              "path": ["api", "auth", "logout"]
            }
          }
        },
        {
          "name": "Get All Users (Admin)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}:{{auth_port}}/api/users?page=1&limit=10",
              "host": ["{{base_url}}"],
              "port": "{{auth_port}}",
              "path": ["api", "users"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" }
              ]
            }
          }
        },
        {
          "name": "Add Address",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"label\": \"Home\",\n  \"street\": \"123 Main Street\",\n  \"city\": \"Ho Chi Minh City\",\n  \"district\": \"District 1\",\n  \"isDefault\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}:{{auth_port}}/api/users/me/addresses",
              "host": ["{{base_url}}"],
              "port": "{{auth_port}}",
              "path": ["api", "users", "me", "addresses"]
            }
          }
        }
      ]
    },
    {
      "name": "Restaurant Service",
      "item": [
        {
          "name": "Get All Restaurants",
          "request": {
            "auth": { "type": "noauth" },
            "method": "GET",
            "url": {
              "raw": "{{base_url}}:{{restaurant_port}}/api/restaurants?page=1&limit=10",
              "host": ["{{base_url}}"],
              "port": "{{restaurant_port}}",
              "path": ["api", "restaurants"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" }
              ]
            }
          }
        },
        {
          "name": "Get Restaurant by ID",
          "request": {
            "auth": { "type": "noauth" },
            "method": "GET",
            "url": {
              "raw": "{{base_url}}:{{restaurant_port}}/api/restaurants/:id",
              "host": ["{{base_url}}"],
              "port": "{{restaurant_port}}",
              "path": ["api", "restaurants", ":id"],
              "variable": [
                { "key": "id", "value": "restaurant_id_here" }
              ]
            }
          }
        },
        {
          "name": "Get Restaurant Menu",
          "request": {
            "auth": { "type": "noauth" },
            "method": "GET",
            "url": {
              "raw": "{{base_url}}:{{restaurant_port}}/api/restaurants/:id/menu",
              "host": ["{{base_url}}"],
              "port": "{{restaurant_port}}",
              "path": ["api", "restaurants", ":id", "menu"],
              "variable": [
                { "key": "id", "value": "restaurant_id_here" }
              ]
            }
          }
        },
        {
          "name": "Create Restaurant",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Pho 24\",\n  \"description\": \"Vietnamese Pho Restaurant\",\n  \"address\": {\n    \"street\": \"24 Le Loi\",\n    \"city\": \"Ho Chi Minh City\",\n    \"district\": \"District 1\"\n  },\n  \"phone\": \"+84901234567\",\n  \"cuisineTypes\": [\"Vietnamese\", \"Asian\"]\n}"
            },
            "url": {
              "raw": "{{base_url}}:{{restaurant_port}}/api/restaurants",
              "host": ["{{base_url}}"],
              "port": "{{restaurant_port}}",
              "path": ["api", "restaurants"]
            }
          }
        },
        {
          "name": "Add Menu Item",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Pho Bo\",\n  \"description\": \"Beef Pho\",\n  \"price\": 55000,\n  \"category\": \"Main Dishes\",\n  \"isAvailable\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}:{{restaurant_port}}/api/restaurants/:id/menu",
              "host": ["{{base_url}}"],
              "port": "{{restaurant_port}}",
              "path": ["api", "restaurants", ":id", "menu"],
              "variable": [
                { "key": "id", "value": "restaurant_id_here" }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Order Service",
      "item": [
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"restaurantId\": \"restaurant_id_here\",\n  \"items\": [\n    {\n      \"menuItemId\": \"menu_item_id\",\n      \"quantity\": 2\n    }\n  ],\n  \"deliveryAddress\": {\n    \"street\": \"123 Main St\",\n    \"city\": \"Ho Chi Minh City\",\n    \"district\": \"District 1\"\n  },\n  \"paymentMethod\": \"cash\",\n  \"notes\": \"Extra spicy please\"\n}"
            },
            "url": {
              "raw": "{{base_url}}:{{order_port}}/api/orders",
              "host": ["{{base_url}}"],
              "port": "{{order_port}}",
              "path": ["api", "orders"]
            }
          }
        },
        {
          "name": "Get My Orders",
          "request": {
            "method": "GET",
