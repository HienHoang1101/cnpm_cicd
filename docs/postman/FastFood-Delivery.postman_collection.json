              "path": ["api", "orders", ":id", "tracking"],
              "variable": [
                { "key": "id", "value": "order_id_here" }
              ]
            }
          }
        },
        {
          "name": "Get Cart",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}:{{order_port}}/api/cart",
              "host": ["{{base_url}}"],
